{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "request":"launch",
            "module": "uvicorn",
            "args": [
                "server.__main__:app",
                "--reload",
                "--reload-include", "tailwind.config.js",
                "--reload-dir", "server",
                "--reload-dir", "public",
            ],
            "jinja": true,
            "justMyCode": false,
        }
    ]
}