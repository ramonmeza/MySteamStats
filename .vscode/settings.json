{
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/__pycache__": true,
	},
	"editor.defaultFormatter": "ms-python.black-formatter",
	"black-formatter.cwd": "${workspaceFolder}",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	"prettier.quoteProps": "as-needed"
}